<div class="row">
  <div class="col m6 s12 mx-auto" style="float: unset;">
    <div class="z-depth-6 card-panel hoverable non-radius">
      <h4 class="center-align">Account Register</h4>
      <form action="/users/register" method="POST">
        <div class="input-field">
          <i class="material-icons prefix">perm_identity</i>
          <input id="inputName" name="inputName" type="text" value="{{name}}" required>
          <label for="inputName">Name</label>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">mail_outline</i>
          <input id="inputEmail" name="inputEmail" type="email" value="{{email}}" required>
          <label for="inputEmail">Email</label>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">lock_outline</i>
          <input id="inputPassword" name="inputPassword" type="password" value="{{password}}" required>
          <label for="inputPassword">Password</label>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">lock_outline</i>
          <input id="inputPassword2" name="inputPassword2" type="password" value="{{password2}}" required>
          <label for="inputPassword2">Re-type password</label>
        </div>
        <div class="center-align">
          <button class="waves-effect waves-light btn blue non-radius">
            <i class="material-icons left">done</i> Done
          </button>
          <button class="waves-effect waves-light btn red lighten-1 non-radius">
            <i class="material-icons left">clear</i>Cancel
          </button>
        </div>
      </form>
    </div>
  </div>
</div>